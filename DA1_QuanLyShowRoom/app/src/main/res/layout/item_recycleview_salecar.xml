<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/shape_button2"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgSaleCar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/imageviewcircle"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:orientation="vertical"
        tools:ignore="InefficientWeight">

        <TextView
            android:id="@+id/txtShowNameCarSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:text="Name Car"
            tools:ignore="HardcodedText,NestedWeights" />

        <TextView
            android:id="@+id/txtShowOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Price"
            android:layout_gravity="start"

            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/txtShowNumberDisscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Disscount"
            android:layout_gravity="start"

            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/txtShowPriceSale"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Price Sale"
            android:layout_gravity="start"

            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>