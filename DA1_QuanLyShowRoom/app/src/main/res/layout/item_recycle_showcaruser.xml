<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_item"
    android:gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgShowImageCarForUser"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:layout_gravity="center_horizontal"
        app:shapeAppearanceOverlay="@style/imageviewcircle"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:orientation="horizontal"
       >
       <TextView
           android:id="@+id/txtShowNameCarForUser"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="15sp"

           android:text="TextView"
           tools:ignore="HardcodedText" />
       <ImageView
           android:id="@+id/imgShowSale"
           android:layout_width="20dp"
           android:layout_height="20dp"
              android:scaleType="centerCrop"
           android:layout_marginStart="5dp"
           android:visibility="gone"
           android:layout_gravity="center"
           android:src="@drawable/background_7"/>
   </LinearLayout>

        <TextView
            android:id="@+id/txtShowPriceCarForUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:text="TextView"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/txtShowPriceSaleCarForUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:text="TextView"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/txtShowColorCarForUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="15sp"
            tools:ignore="HardcodedText" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDetail"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_marginTop="5dp"
            android:textSize="8sp"
            android:background="@drawable/shape_editext_detail"
            android:text="Chi tiáº¿t"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            tools:ignore="HardcodedText,SmallSp">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</LinearLayout>