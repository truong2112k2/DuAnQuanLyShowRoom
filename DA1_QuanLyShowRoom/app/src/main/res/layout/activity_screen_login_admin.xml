<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
   android:background="@drawable/background5"
    tools:context=".ScreenLoginAdmin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập Admin"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:background="@drawable/background_shadow2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="43dp"
                android:layout_height="36dp"

                android:layout_gravity="center"
                app:srcCompat="@drawable/img" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edtInputAdminName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:hint="Tên đăng nhập"
                    tools:ignore="HardcodedText">
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >
            <ImageView

                android:layout_width="43dp"
                android:layout_gravity="center"

                android:layout_height="43dp"
                app:srcCompat="@drawable/icon_password_use" />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/edtInputAdminPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:layout_marginStart="5dp"

                    tools:ignore="HardcodedText">
                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogInAddMin"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:text="Đăng Nhập"
            android:textStyle="bold"
            android:background="@drawable/shape_button2"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>